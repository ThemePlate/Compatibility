{
	"name": "themeplate/compatibility",
	"description": "Simple compatibility helper class",
	"license": "GPL-3.0-only",
	"authors": [
		{
			"name": "Gene Alyson Fortunado Torcende",
			"email": "genealyson.torcende@gmail.com"
		}
	],
	"minimum-stability": "dev",
	"prefer-stable": true,
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		},
		"optimize-autoloader": true,
		"preferred-install": "dist",
		"sort-packages": true
	},
	"require": {
		"php": "^7.4|^8.0"
	},
	"require-dev": {
		"themeplate/tester": "^2.0",
		"wp-cli/wp-cli": "^2.7"
	},
	"autoload": {
		"files": [
			"Compatibility.php"
		],
		"psr-4": {
			"ThemePlate\\Compatibility\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests"
		}
	}
}
